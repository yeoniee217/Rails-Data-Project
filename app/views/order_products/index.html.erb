<h3 class="title is-3">Orders</h3>
<% if @order_products.empty? %>
<p>There are no orders.</p>
<% else %>
<table id="orders_table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">Order Number</th>
      <th class="th-sm">Order Date</th>
      <th class="th-sm">Product Name</th>
      <th class="th-sm">Product Price</th>
      <th class="th-sm">Customer Name</th>
    </tr>
  </thead>
  <tbody>
  <% @order_products.each do |order_product| %>
    <tr>
      <td><%= order_product.order.order_num %></td>
      <td><%= link_to order_product.order.order_date.strftime("%Y-%m-%d"), order_product.order %></td>
      <td><%= link_to order_product.product.name, order_product.product %></td>
      <td>$<%= order_product.product.price %></td>
      <td><%= link_to order_product.order.customer.name, order_product.order.customer %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>

<script>
  $(document).ready(function () {
    $('#orders_table').DataTable();
    $('.dataTables_length').addClass('bs-select');
  });
</script>