<h3 class="title is-3">Orders</h3>
<% if @orders.empty? %>
<p>There are no orders.</p>
<% else %>
<table id="orders_table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">Order Date</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.order_date, order %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>

<script>
  $(document).ready(function () {
    $('#orders_table').DataTable();
    $('.dataTables_length').addClass('bs-select');
  });
</script>